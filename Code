import re
import time

def validate_phone_number(phone_number):
    print("\nğŸ” Checking phone number validity...")
    time.sleep(1)

    cleaned_number = re.sub(r'[()\s-]', '', phone_number)

    if cleaned_number == "":
        print("âš ï¸ No number entered! Please provide a phone number.")
        return

    if not re.match(r'^\+?\d+$', cleaned_number):
        print("âŒ Invalid characters detected! Only digits and '+' are allowed.")
        return

    digits_only = re.sub(r'\D', '', cleaned_number)
    if len(digits_only) < 10:
        print("âŒ Too short! A valid number must have at least 10 digits.")
        return
    elif len(digits_only) > 15:
        print("âŒ Too long! A valid number cannot exceed 15 digits.")
        return

    pattern = r'^\+?\d{10,15}$'
    if re.fullmatch(pattern, cleaned_number):
        print("âœ… Valid phone number detected!")
        print(f"ğŸ“ Cleaned Format: {cleaned_number}")
        if cleaned_number.startswith("+91") or cleaned_number.startswith("91"):
            print("ğŸŒ Region Detected: India ğŸ‡®ğŸ‡³")
        else:
            print("ğŸŒ Region: International format detected")
    else:
        print("âŒ Invalid format! Please check your number again.")

print("ğŸ“± Phone Number Validation System")
print("----------------------------------")

number = input("Enter a phone number: ")
validate_phone_number(number)
